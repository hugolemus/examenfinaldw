<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    android:padding="32dp"
    tools:context=".Marcas.Marca">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="MARCAS"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtIdMarca"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"

            android:ems="10"
            android:hint="Id"
            android:inputType="number"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBuscar"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/buscar"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:background="#158C66"

            android:onClick="Buscar"
            android:text="Buscar"
            app:backgroundTint="@color/cardview_shadow_end_color"
             />

        <EditText
            android:id="@+id/edtMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:hint="Ingrese marca"
            android:inputType="textPersonName"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/purple_700"
            android:onClick="onClick"
            android:text="REGISTRAR"
             />

        <Button
            android:id="@+id/btnEditarGrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/purple_700"
            android:onClick="Editar"
            android:text="MODIFICAR"
            />

        <Button
            android:id="@+id/btnEliminarGrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/purple_700"
            android:onClick="Eliminar"
            android:text="ELIMINAR"
             />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/purple_700"
            android:onClick="Lista"

            android:text="REPORTE"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>